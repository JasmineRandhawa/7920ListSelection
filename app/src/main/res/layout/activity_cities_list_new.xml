<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="250dp"
    android:layout_height="700dp"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/White"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectedItemTextView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="@color/DarkViolet"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/citiesListTexView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Cities List"
            android:textAlignment="center"
            android:textColor="@color/Crimson"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="600dp"
        android:layout_marginLeft="40dp"
        android:background="@color/LightSlateGray">

        <com.example.ListSelection.CitiesListView
            android:id="@+id/dictionary"
            android:layout_width="290dp"
            android:layout_height="800dp"
            android:background="@color/LightSlateGray" />
    </RelativeLayout>
    l
</LinearLayout>